{
    "version": 2,
    "builds": [
      {
        "src": "server/backend/mongodb.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": { "buildCommand": "npm run build" }
      }
    ],
    "routes": [
      { "src": "/api/.*", "dest": "server/backend/mongodb.js" },
      { "src": "/(.*)", "dest": "/client/$1" }
    ]
  }
  